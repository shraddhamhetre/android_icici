<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:orientation="vertical"
            android:layout_weight="0.8">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/parentCheckPoint"
                android:textSize="@dimen/text_size18dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text=""/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/view0"
                android:background="@color/listviewDivider"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/parentStatus"
                android:layout_marginTop="@dimen/text_margin5dp"
                android:layout_marginStart="@dimen/text_margin5dp"
                android:background="@android:color/black"
                android:textSize="@dimen/text_size12dp"
                android:textStyle="bold"
                android:gravity="start"
                android:textColor="@android:color/white"
                android:text=""/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/parentAssignedto"
                android:background="@android:color/black"
                android:layout_marginTop="@dimen/text_margin5dp"
                android:layout_marginStart="@dimen/text_margin5dp"
                android:textSize="@dimen/text_size12dp"
                android:gravity="start"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text=""/>
        </LinearLayout>

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/view0"
            android:background="@color/listviewDivider"/>-->

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/listviewDivider"
            android:dividerHeight="2dp"
            android:id="@+id/checkpointChildListView"
            android:scrollbars="none"
            android:layout_weight="0.2"/>

    </LinearLayout>
