    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/multiLineLinerLayout">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:lines="5"
            android:maxLength="250"
            android:textColor="@android:color/black"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:id="@+id/multiLineEdittext"
            android:gravity="top|start"
            android:hint=""/>
        <TextView
            android:id="@+id/multiLineEdittextCharCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|center"
            android:text="250/250"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/text_margin10dp"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/text_size10dp"/>
        <requestFocus />

    </LinearLayout>

    <LinearLayout
