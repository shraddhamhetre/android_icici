    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/screen_appbar_color"
        android:weightSum="1"
        android:gravity="center"
        android:id="@+id/qNameLinearLayout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/qNameTextView"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_weight="0.1"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:text=""/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/qRemarkIV"
            android:layout_weight="0.9"
            android:visibility="gone"
            android:layout_gravity="center|end"
            android:src="@drawable/baseline_g_translate_white_48"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/numericLinerLayout">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:id="@+id/numericEdittext"
            android:imeOptions="actionNext"
            android:hint=""/>
        <requestFocus />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/singleLineLinerLayout">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="250"
            android:imeOptions="actionNext"
            android:textColor="@android:color/black"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:id="@+id/singleLineEdittext"
            android:hint=""/>
        <TextView
            android:id="@+id/singleLineEdittextCharCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="end|center"
            android:text="250/250"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/text_margin10dp"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/text_size10dp"/>
        <requestFocus />

    </LinearLayout>

