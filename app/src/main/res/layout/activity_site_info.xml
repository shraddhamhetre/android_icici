<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.youtility.intelliwiz20.Activities.SiteInfoActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="none"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/siteinfo_sitename"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_margin="@dimen/activity_5_margin"
                android:textSize="@dimen/text_size12dp"
                android:textAppearance="@android:style/TextAppearance.Small"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:id="@+id/siteinfo_name"
                android:lines="1"
                android:layout_margin="@dimen/activity_5_margin"
                android:textSize="@dimen/text_size15dp"
                android:textAppearance="@android:style/TextAppearance.Medium"/>
            <View
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="2dp"
                android:background="@color/listviewDivider"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/siteinfo_siteadd"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_margin="@dimen/activity_5_margin"
                android:textSize="@dimen/text_size12dp"
                android:textAppearance="@android:style/TextAppearance.Small"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:id="@+id/siteinfo_address"
                android:lines="3"
                android:layout_margin="@dimen/activity_5_margin"
                android:textSize="@dimen/text_size15dp"
                android:textAppearance="@android:style/TextAppearance.Medium"/>
            <View
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="2dp"
                android:background="@color/listviewDivider"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/siteinfo_sitelandmark"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_margin="@dimen/activity_5_margin"
                android:textSize="@dimen/text_size12dp"
                android:textAppearance="@android:style/TextAppearance.Small"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:id="@+id/siteinfo_landmark"
                android:textSize="@dimen/text_size15dp"
                android:lines="1"
                android:layout_margin="@dimen/activity_5_margin"
                android:textAppearance="@android:style/TextAppearance.Medium"/>
            <View
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="2dp"
                android:background="@color/listviewDivider"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/siteinfo_sitepcode"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_margin="@dimen/activity_5_margin"
                android:textSize="@dimen/text_size12dp"
                android:textAppearance="@android:style/TextAppearance.Small"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:id="@+id/siteinfo_postalcode"
                android:textSize="@dimen/text_size15dp"
                android:lines="1"
                android:layout_margin="@dimen/activity_5_margin"
                android:textAppearance="@android:style/TextAppearance.Medium"/>
            <View
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="2dp"
                android:background="@color/listviewDivider"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/siteinfo_sitegps"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_margin="@dimen/activity_5_margin"
                android:textSize="@dimen/text_size12dp"
                android:textAppearance="@android:style/TextAppearance.Small"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:id="@+id/siteinfo_location"
                android:textSize="@dimen/text_size15dp"
                android:gravity="center|start"
                android:drawableStart="@android:drawable/ic_menu_mylocation"
                android:layout_margin="@dimen/activity_5_margin"
                android:textAppearance="@android:style/TextAppearance.Medium"/>
            <View
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="2dp"
                android:background="@color/listviewDivider"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/siteinfo_sitetotalstrength"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_margin="@dimen/activity_5_margin"
                android:textSize="@dimen/text_size12dp"
                android:textAppearance="@android:style/TextAppearance.Small"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:id="@+id/siteinfo_totalstrength"
                android:gravity="center|start"
                android:layout_margin="@dimen/activity_5_margin"
                android:textSize="@dimen/text_size15dp"
                android:textAppearance="@android:style/TextAppearance.Medium"/>
            <View
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="2dp"
                android:background="@color/listviewDivider"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/siteinfo_sitedetails"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_margin="@dimen/activity_5_margin"
                android:textSize="@dimen/text_size12dp"
                android:textAppearance="@android:style/TextAppearance.Small"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:id="@+id/siteinfo_strengthdetails"
                android:gravity="center|start"
                android:layout_margin="@dimen/activity_5_margin"
                android:textSize="@dimen/text_size15dp"
                android:textAppearance="@android:style/TextAppearance.Medium"/>
            <View
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="2dp"
                android:background="@color/listviewDivider"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/siteinfo_sitecontactperson"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_margin="@dimen/activity_5_margin"
                android:textSize="@dimen/text_size12dp"
                android:textAppearance="@android:style/TextAppearance.Small"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:id="@+id/siteinfo_contactPersonName"
                android:textSize="@dimen/text_size15dp"
                android:gravity="center|start"
                android:layout_margin="@dimen/activity_5_margin"
                android:textAppearance="@android:style/TextAppearance.Medium"/>
            <View
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="2dp"
                android:background="@color/listviewDivider"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/siteinfo_sitecontactnumber"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_margin="@dimen/activity_5_margin"
                android:textSize="@dimen/text_size12dp"
                android:textAppearance="@android:style/TextAppearance.Small"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:id="@+id/siteinfo_contactPersonNumber"
                android:gravity="center|start"
                android:drawableStart="@android:drawable/ic_menu_call"
                android:layout_margin="@dimen/activity_5_margin"
                android:textSize="@dimen/text_size15dp"
                android:textAppearance="@android:style/TextAppearance.Medium"/>
            <View
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="2dp"
                android:background="@color/listviewDivider"/>

        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>
