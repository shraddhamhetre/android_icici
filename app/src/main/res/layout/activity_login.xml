<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.youtility.intelliwiz20.Activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.34"
        android:layout_gravity="center"
        android:background="@color/button_background"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/youtility"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_5_margin"
        android:paddingLeft="@dimen/activity_5_margin"
        android:paddingRight="@dimen/activity_5_margin"
        android:paddingTop="@dimen/activity_5_margin"
        android:layout_margin="7dp"
        android:layout_weight="0.20"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:orientation="vertical">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/sitecode_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/login_sitename_hint"
            android:lines="1"
            android:textSize="@dimen/text_size12dp"
            android:textColorHint="@color/text_color"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_margin="4dp"
            android:id="@+id/site_code"
            android:imeOptions="actionNext"
            android:inputType="textCapCharacters"
            android:selectAllOnFocus="true"
            android:maxLines="1"
            />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/usercode_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/login_username_hint"
            android:lines="1"
            android:textSize="@dimen/text_size12dp"
            android:textStyle="bold"
            android:textColorHint="@color/text_color"
            android:textColor="@color/colorBlack"
            android:layout_margin="4dp"
            android:id="@+id/user_code"
            android:imeOptions="actionNext"
            android:selectAllOnFocus="true"
            android:inputType="text"
            android:maxLines="1"
            />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/userpassword_layout"
                android:layout_width="match_parent"
                android:layout_weight="0.2"
                app:passwordToggleEnabled="true"
                android:layout_height="wrap_content">

                <!--app:counterEnabled="true"
                app:counterMaxLength="140"-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/login_userpassword_hint"
                android:maxLines="1"
                android:textSize="@dimen/text_size12dp"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:selectAllOnFocus="true"
                android:imeOptions="actionDone"
                android:textColorHint="@color/text_color"
                android:textColor="@color/colorBlack"
                android:layout_margin="7dp"

                android:id="@+id/user_password"
                />
            </android.support.design.widget.TextInputLayout>
            <!--<Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:id="@+id/showPassSwitch"
                android:textColor="@color/text_color"
                android:textAlignment="textEnd"/>-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:visibility="gone"
            android:weightSum="1">

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:id="@+id/offlineSwitch"
                android:textColor="@color/text_color"
                android:text="Offline mode"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/button_login"
            android:id="@+id/loginButton"
            android:background="@drawable/rounder_cancel_button"
            android:textColor="@android:color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/appVersion"
                android:textColor="@color/button_background"
                android:layout_weight="0.5"
                android:textSize="@dimen/text_size10dp"
                android:text="@string/aboutus_appversion"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center"
                android:id="@+id/forgotPassword"
                android:layout_weight="0.5"
                android:textColor="@color/button_background"
                android:textSize="@dimen/text_size10dp"
                android:visibility="gone"
                android:text="Forgot Password?"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.46"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:text="Powered by Youtility Technologies Pvt. Ltd."/>
    </LinearLayout>


</LinearLayout>
