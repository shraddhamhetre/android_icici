            android:background="@color/colorPrimaryDark"/>-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="@string/adhoc_assignto"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/userAndGroup"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:weightSum="1"
                    android:layout_height="wrap_content" >
                    <RadioButton
                        android:id="@+id/userRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.333"
                        android:textColor="@android:color/black"
                        android:text="@string/adhoc_people" />

                    <RadioButton
                        android:id="@+id/groupRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.333"
                        android:textColor="@android:color/black"
                        android:text="@string/adhoc_group" />

                    <RadioButton
                        android:id="@+id/selfRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.334"
                        android:textColor="@android:color/black"
                        android:text="@string/adhoc_self" />

                </RadioGroup>
            </LinearLayout>

            <Spinner
                android:id="@+id/jobPeopleGroupSpinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                style="?android:attr/spinnerItemStyle">
            </Spinner>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/adhoc_perform"
                android:visibility="gone"
                android:background="@color/button_background"
                android:textColor="@android:color/white"
                android:layout_gravity="end|center"
                android:id="@+id/selfPerformButton"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:weightSum="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="@string/adhoc_remark"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:id="@+id/jobRemarkEdittext"
                android:inputType="text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:weightSum="1">
            <RelativeLayout
                android:id="@+id/badge_layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/relative_layout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/showAttachments"
                        android:textColor="@android:color/white"
                        android:background="@drawable/rounder_action_button"
                        android:text="@string/adhoc_attchcount" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/badge_attachment_count_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/relative_layout2"
                    android:background="@drawable/badge_count_circle"
                    android:text="@string/count_zero"
                    android:textColor="@android:color/white"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

