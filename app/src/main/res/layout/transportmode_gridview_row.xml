<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:weightSum="1"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_margin="2dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:background="@color/web_screen_background"
            android:layout_height="match_parent">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mode"
                android:textSize="@dimen/text_size12dp"
                android:id="@+id/gridTravelModeButton"
                android:textColor="@android:color/white"
                android:layout_weight="0.50"
                android:background="@drawable/borderless_button"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:visibility="gone"
                android:weightSum="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/gridTimeTextview"
                    android:textSize="10dp"
                    android:textColor="@android:color/white"
                    android:layout_weight="0.333"
                    android:text="T"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/gridDistanceTextview"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:layout_weight="0.333"
                    android:text="D"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/gridMoneyTextview"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:layout_weight="0.334"
                    android:text="M"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
