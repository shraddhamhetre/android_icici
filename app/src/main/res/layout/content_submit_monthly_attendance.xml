<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.youtility.intelliwiz20.Activities.SubmitMonthlyAttendanceActivity"
    tools:showIn="@layout/activity_submit_monthly_attendance">
    <ListView
        android:id="@+id/amUserattendanceListview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:scrollbars="none"
        android:divider="@color/listviewDivider"
        android:dividerHeight="1dp"
        android:layout_weight="0.9"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="@color/web_screen_background"
        android:layout_weight="0.1"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PD :"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_weight="0.20"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/pdCountTextView"
            android:textColor="@android:color/white"
            android:enabled="false"
            android:gravity="center"
            android:layout_weight="0.20"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ED :"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_weight="0.20"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/edCountTextView"
            android:textColor="@android:color/white"
            android:enabled="false"
            android:gravity="center"
            android:layout_weight="0.20"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total"
            android:id="@+id/getFinalTotalTextView"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:gravity="center"
            android:layout_weight="0.20"/>
    </LinearLayout>
</LinearLayout>


